<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/like__arrow"
        android:layout_width="@dimen/content__padding_left"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/content__footer__hint_arrow_padding"
        android:textColor="@color/text__secondary_light"
        android:textSize="@dimen/wire__text_size__small"
        android:text="@string/glyph__previous"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/like__description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/text__secondary_light"
        android:textSize="@dimen/wire__text_size__small"
        android:maxLines="1"
        app:font="@string/wire__typeface__light"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/like_chathead_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/content__padding_right"
        android:gravity="center_vertical"
        >

        <com.waz.zclient.common.views.ChatheadView
            android:layout_width="@dimen/content__footer__chathead__size"
            android:layout_height="@dimen/content__footer__chathead__size"
            android:layout_marginEnd="@dimen/wire__padding__small"
            app:show_border="false"
            app:isSelectable="false"
            />

        <com.waz.zclient.common.views.ChatheadView
            android:layout_width="@dimen/content__footer__chathead__size"
            android:layout_height="@dimen/content__footer__chathead__size"
            android:layout_marginEnd="@dimen/wire__padding__small"
            app:show_border="false"
            app:isSelectable="false"
            />

        <com.waz.zclient.ui.text.GlyphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/glyph__more"
            />

    </LinearLayout>
</merge>
